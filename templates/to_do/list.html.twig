{% extends 'base.html.twig' %}

{% block title %}Lista de Sarcini{% endblock %}

{% block body %}
    <h1>Lista de Sarcini</h1>

    <ul>
        {% for task in tasks %}
            <div>
            <a href='task/update/{{task.id}}'>Edit</a> 
            <a href='task/delete/{{task.id}}'>Delete</a> 
            <label class="control-label" style="">{{task.title}}</label>
            </div
            <br>
        {% endfor %}
    </ul>
{% endblock %}
